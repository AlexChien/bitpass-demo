<table border=1>
  <thead>
    <tr>
      <th>Source Message Text</th>
      <th>QR Code</th>
    </tr>
  </thead>
  <tbody>
  <tr>
    <td>
      <textarea rows=10><%= @verify_string %></textarea>
      <ul>
        <li>message: <code><%= @message %></code></li>
        <li>callback url: <code><%= @callback_url %></code></li>
      </ul>
    </td>
    <td>
      <img src="<%= @qrcode %>" alt="">
    </td>
  </tr>
  </tbody>
</table>

<div id="verify_status">verify_status: <span></span></div>

<hr/>
<h3>Help</h3>
<ul>
  <li>refresh page to get new source message</li>
  <li><a href="https://github.com/dearcoin/bitpass-demo">bitpass demo @Github</a>
</ul>



<script>
var sm = "<%= @message %>";
$(document).ready(function() {
        setInterval(function() {
                $("#verify_status span").html('checking...');
                $.get("/trylogin", {message: sm}, function(data) {
                        $("#verify_status span").html(data);
                });
        }, 2000);
}); 
</script>